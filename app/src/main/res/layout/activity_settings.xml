<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tool_bar"
        style="@style/MyToolbarTitle"
        app:navigationIcon="@drawable/ic_back_arrow_48"
        app:title="@string/settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/selector"
        style="@style/SettingsItemStyle"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:text="@string/dark_theme"
        app:thumbTint="@color/s_thumb_color"
        app:trackTint="@color/s_track_color" />
    <!-- Цвет ползунка и дорожки -->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share_line"
        style="@style/SettingsItemStyle"
        android:text="@string/share_app"
        android:drawableEnd="@drawable/share"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/support_line"
        style="@style/SettingsItemStyle"
        android:text="@string/contact_support"
        android:drawableEnd="@drawable/support"/>
    <!-- app:drawableTint= "@color/blue"-->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/agreement_line"
        style="@style/SettingsItemStyle"
        android:text="@string/user_agreement"
        android:drawableEnd="@drawable/arrow_forward" />

</LinearLayout>